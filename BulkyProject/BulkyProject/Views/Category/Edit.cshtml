@model BulkyProject.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h4 class="text-primary">Category</h4>
<hr />
<div class="row">
    <div class="col-md-6 row">
        <form asp-action="Edit">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6 col-md-3 text-end">
                    <div class="form-group pt-2">
                        <button type="submit" value="Update" class="btn btn-primary" style="width:150px">
                            Update
                        </button>
                    </div>
                </div>
                <div class="col-6 col-md-3 pt-2 text-begin">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:150px">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}



